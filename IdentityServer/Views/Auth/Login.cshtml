@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form Responsive</title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <!-- mycss -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <img src="~/img/wave.png" class="wave" alt="">
    <div class="container">
        <div class="img">
            <img src="~/img/bg.svg" alt="">
        </div>

        <!-- Login Content -->
        <div class="login-content">
            <form asp-controller="Auth" asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl" />

                <img src="~/img/avatar.svg" alt="">
                <h2 class="title">Welcome</h2>

                <!-- Input Username -->
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <input asp-for="Username" type="text" class="input">
                    </div>
                </div>
                <!-- End Input Username -->
                <!-- Input Password -->
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input asp-for="Password" type="password" class="input">
                    </div>
                </div>
                <!-- End Input Password -->
                
                <a href="#" style="float: left; margin-bottom: 15px;">Forgot your Password?</a> <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" style="float:right;">Register!</a>
                <input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>

    <script type="text/javascript" src="~/js/main.js"></script>
</body>
</html>